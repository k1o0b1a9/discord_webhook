name: Rakuten Monitor

on:
  schedule:
    - cron: '*/5 * * * *'
  workflow_dispatch:

jobs:
  monitor:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        url_name: [MONITOR_URL_1, MONITOR_URL_2, MONITOR_URL_3, MONITOR_URL_4]

    steps:
      - uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Run monitoring script
        env:
          MONITOR_URL: ${{ secrets[matrix.url_name] }}
          DISCORD_WEBHOOK: ${{ secrets.DISCORD_WEBHOOK }}
        run: node scripts/access_rakuten.js